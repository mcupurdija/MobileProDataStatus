<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/list_item_background" >

    <RelativeLayout
        android:id="@+id/layoutKorpaBrojLinije"
        android:layout_width="65dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:focusable="false"
        android:gravity="center"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tvKorpaBrojLinije"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutKorpaInfoTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_toRightOf="@+id/layoutKorpaBrojLinije"
        android:focusable="false"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/tvKorpaSifraOpis"
            style="@style/ListItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutKorpaInfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layoutKorpaInfoTop"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_toLeftOf="@+id/layoutKorpaStatus"
        android:layout_toRightOf="@+id/layoutKorpaBrojLinije"
        android:focusable="false"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/tvKorpaInfo1"
            style="@style/ListItemSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:focusable="false"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tvKorpaInfo2"
            style="@style/ListItemSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvKorpaInfo1"
            android:focusable="false"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutKorpaStatus"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layoutKorpaInfoTop"
        android:focusable="false" >

        <TextView
            android:id="@+id/tvKorpaStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

</RelativeLayout>