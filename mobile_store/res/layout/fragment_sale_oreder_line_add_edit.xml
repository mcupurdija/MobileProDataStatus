<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_weight="6" />

            <Button
                android:id="@+id/so_line_save_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/white_button"
                android:text="@string/so_line_save_button_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/so_line_item_no_label"
                style="@style/AddEdit_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_no_label" />

            <TextView
                android:id="@+id/so_line_disc_label"
                style="@style/AddEdit_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:orientation="horizontal" >

            <AutoCompleteTextView
                android:id="@+id/so_line_item_no_value"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_weight="6"
                android:completionThreshold="2"
                android:hint="@string/item_no_hint"
                android:paddingLeft="12dip"
                android:paddingRight="12dip"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/so_line_read_item_data_button"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/white_button"
                android:text="@string/load_item_data_button" />
        </LinearLayout>

        <TextView
            android:id="@+id/so_line_item_quantities_label"
            style="@style/AddEdit_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/so_line_item_quantities_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/so_line_item_quantity_value"
                style="@style/AddEdit_Text_Value"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_weight="3"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/so_line_plus_one"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_rect"
                    android:gravity="center"
                    android:text="@string/button_add_label" />

                <Button
                    android:id="@+id/so_line_minus_one"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/et_rect"
                    android:gravity="center"
                    android:text="@string/button_subtract_label" />

                <Button
                    android:id="@+id/so_line_add_min"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/et_rect"
                    android:gravity="center"
                    android:text="@string/button_multiply_label"
                    android:visibility="gone" />
            </LinearLayout>

            <EditText
                android:id="@+id/so_line_item_max_quantity_value"
                style="@style/AddEdit_Text_Value"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_weight="3" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/so_line_avail_to_whole_ship_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="8dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="@string/so_line_avail_to_whole_ship_check_box_text"
            android:visibility="gone" />

        <TextView
            android:id="@+id/so_line_item_prices_label"
            style="@style/AddEdit_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/so_line_item_prices_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/so_line_item_price_value"
                style="@style/AddEdit_Text_Value"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="8dip"
                android:layout_weight="3"
                android:digits="0123456789,"
                android:inputType="text" />

            <EditText
                android:id="@+id/so_line_item_discount_value"
                style="@style/AddEdit_Text_Value"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_weight="2"
                android:digits="0123456789,"
                android:inputType="text" />

            <EditText
                android:id="@+id/so_line_item_sugg_price_value"
                style="@style/AddEdit_Text_Value"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="16dip"
                android:layout_weight="3"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/so_line_item_campaign_label"
                    style="@style/AddEdit_Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_campaign_status_label" />

                <Spinner
                    android:id="@+id/so_line_item_campaign_spinner"
                    style="EditEvent_Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dip"
                    android:layout_marginRight="16dip" />
            </LinearLayout>

            <!-- invisible one, left here for code behind not to break -->

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/so_line_quote_refused_label"
                    style="@style/AddEdit_Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/so_line_quote_refused_text"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/so_line_quote_refused_spinner"
                    style="EditEvent_Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dip"
                    android:layout_marginRight="16dip"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/so_line_location_label"
                    style="@style/AddEdit_Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/so_line_location_text" />

                <Spinner
                    android:id="@+id/so_line_location_spinner"
                    style="EditEvent_Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dip"
                    android:layout_marginRight="16dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/so_line_backorder_label"
                    style="@style/AddEdit_Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/backorder" />

                <Spinner
                    android:id="@+id/so_line_backorder_spinner"
                    style="EditEvent_Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dip"
                    android:layout_marginRight="16dip" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/so_line_item_available_to_whole_ship_label"
                    style="@style/AddEdit_Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/available_to_whole_ship" />

                <Spinner
                    android:id="@+id/so_line_item_available_to_whole_ship_spinner"
                    style="EditEvent_Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dip"
                    android:layout_marginRight="16dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/so_line_verify_status_label"
                    style="@style/AddEdit_Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verify_status" />

                <TextView
                    android:id="@+id/so_line_verify_status_value"
                    style="@style/AddEdit_Text_Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/so_line_price_and_discount_are_correct_label"
                    style="@style/AddEdit_Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_and_discount_are_correct" />

                <TextView
                    android:id="@+id/so_line_price_and_discount_are_correct_value"
                    style="@style/AddEdit_Text_Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>