<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inner_view_about"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/last_sync_date"
        style="@style/AddEdit_Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/sync_sales_person_plan_and_turnover_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/sync_sales_person_plan_and_turnover_button_title" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <TextView
        style="@style/AddEdit_Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="30dp"
        android:text="@string/this_month_label" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/AddEdit_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_marginRight="30dp"
            android:text="@string/this_month_plan_label" />

        <TextView
            style="@style/AddEdit_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_marginRight="30dp"
            android:text="@string/this_month_turnover_label" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/this_month_plan_value"
            style="@style/AddEdit_Text_Value"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_marginRight="30dp" />

        <TextView
            android:id="@+id/this_month_turnover_value"
            style="@style/AddEdit_Text_Value"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_marginRight="30dp" />
    </LinearLayout>

    <TextView
        style="@style/AddEdit_Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="30dp"
        android:text="@string/last_month_label" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/AddEdit_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="30dp"
            android:gravity="right|center_vertical"
            android:text="@string/last_month_plan_label" />

        <TextView
            style="@style/AddEdit_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="30dp"
            android:gravity="right|center_vertical"
            android:text="@string/last_month_turnover_label" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/last_month_plan_value"
            style="@style/AddEdit_Text_Value"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center_vertical"
            android:layout_marginRight="30dp" />

        <TextView
            android:id="@+id/last_month_turnover_value"
            style="@style/AddEdit_Text_Value"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center_vertical"
            android:layout_marginRight="30dp" />
    </LinearLayout>

</LinearLayout>