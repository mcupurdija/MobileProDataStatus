<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?activatableItemBackground"
    android:clickable="true"
    android:focusable="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/invoice_line_title1"
            style="@style/ListItemTitle"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/listPreferredItemPaddingLeft"
            android:layout_marginRight="@dimen/listPreferredItemPaddingRight"
            android:layout_weight="7"
            android:focusable="false"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/invoice_line_title2"
            style="@style/ListItemTitle"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/listPreferredItemPaddingLeft"
            android:layout_marginRight="@dimen/listPreferredItemPaddingRight"
            android:layout_weight="3"
            android:focusable="false"
            android:textIsSelectable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/invoice_line_subtitle"
            style="@style/ListItemSubtitle"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/listPreferredItemPaddingLeft"
            android:layout_marginRight="@dimen/listPreferredItemPaddingRight"
            android:layout_weight="7"
            android:focusable="false"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/invoice_line_subtitle2"
            style="@style/ListItemSubtitle"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/listPreferredItemPaddingLeft"
            android:layout_marginRight="@dimen/listPreferredItemPaddingRight"
            android:layout_weight="3"
            android:focusable="false"
            android:textIsSelectable="false"
            android:gravity="right" />
    </LinearLayout>

    <TextView
        android:id="@+id/invoice_line_subtitle3"
        style="@style/ListItemSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/listPreferredItemPaddingLeft"
        android:layout_marginRight="@dimen/listPreferredItemPaddingRight"
        android:focusable="false"
        android:gravity="right"
        android:textIsSelectable="false" />

</LinearLayout>