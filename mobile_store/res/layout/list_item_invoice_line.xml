<?xml version="1.0" encoding="utf-8"?>
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:focusable="false"
         android:background="?activatableItemBackground"
         style="@style/SimpleListItemSmall" >

        <TextView
            android:id="@+id/invoice_line_title"
            style="@style/ListItemTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/listPreferredItemPaddingLeft"
            android:layout_marginRight="@dimen/listPreferredItemPaddingRight"           
            android:paddingTop="2dp" 
            android:focusable="false"/>
        

         <TextView
            android:id="@+id/invoice_line_subtitle"
            style="@style/ListItemSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/invoice_line_title"
             android:layout_marginLeft="@dimen/listPreferredItemPaddingLeft"
            android:layout_marginRight="@dimen/listPreferredItemPaddingRight"        
           android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:focusable="false" />
        
          <TextView
            android:id="@+id/invoice_line_subtitle2"
            style="@style/ListItemSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_alignTop="@id/invoice_line_subtitle"
            android:layout_toRightOf="@id/invoice_line_subtitle"
             android:layout_marginLeft="@dimen/listPreferredItemPaddingLeft"
            android:layout_marginRight="@dimen/listPreferredItemPaddingRight"        
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:focusable="false" />
          
            
           <TextView
            android:id="@+id/invoice_line_subtitle3"
            style="@style/ListItemSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
              android:layout_marginLeft="@dimen/listPreferredItemPaddingLeft"
            android:layout_marginRight="@dimen/listPreferredItemPaddingRight"        
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:focusable="false" /> 
    </RelativeLayout>
