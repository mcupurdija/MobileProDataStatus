<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_middle_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?activatableItemBackground"
    android:baselineAligned="false"
    android:focusable="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/block_title"
            style="@style/ListItemTitle"
            android:layout_width="0px"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/listPreferredItemPaddingLeft"
            android:layout_marginRight="@dimen/listPreferredItemPaddingRight"
            android:focusable="false"
            android:paddingTop="8dp"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/block_status"
            style="@style/ListItemSubtitle"
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:focusable="false"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:textIsSelectable="false" />
    </LinearLayout>

    <TextView
        android:id="@+id/block_subtitle1"
        style="@style/ListItemSubtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:gravity="left"
        android:paddingBottom="8dp"
        android:layout_marginLeft="@dimen/listPreferredItemPaddingLeft"
        android:layout_marginRight="15dp"
        android:textIsSelectable="false" />
    <TextView
        android:id="@+id/block_subtitle2"
        style="@style/ListItemSubtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:gravity="right"
        android:paddingBottom="8dp"
        android:layout_marginRight="15dp"
        android:textIsSelectable="false" />
</LinearLayout>