<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rlPretragaKontakti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp" >

        <TextView
            android:id="@+id/tvInputNaslovKontakti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etInputKontakti"
            android:text="@string/contact_search_title" />

        <EditText
            android:id="@+id/etInputKontakti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvInputNaslovKontakti"
            android:hint="@string/hint_search"
            android:inputType="text" >
        </EditText>
    </RelativeLayout>

    <ListView
        android:id="@+id/lvKontakti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlPretragaKontakti" >
    </ListView>

</RelativeLayout>