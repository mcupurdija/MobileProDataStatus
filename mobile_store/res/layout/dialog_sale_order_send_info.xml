<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:layout_marginTop="12dp" >

        <TextView
            android:id="@+id/dialog_sale_order_order_document_master_status_message"
            style="@style/AddEdit_Text_Value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:gravity="center_vertical"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/dialog_sale_order_order_document_additional_status_message"
            style="@style/AddEdit_Text_Value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:gravity="center_vertical"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/black" />

        <TextView
            style="@style/AddEdit_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:gravity="center_vertical"
            android:text="@string/document_saldo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/dialog_sale_order_document_saldo"
            style="@style/AddEdit_Text_Value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:gravity="center_vertical" />

        <TextView
            style="@style/AddEdit_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:gravity="center_vertical"
            android:text="@string/statuses" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/dialog_sale_order_order_condition_status_label"
            style="@style/AddEdit_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:gravity="center_vertical"
            android:text="@string/order_condition_status" />

        <TextView
            android:id="@+id/dialog_sale_order_order_condition_status_spinner"
            style="@style/AddEdit_Text_Value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/dialog_sale_order_financial_control_status_label"
            style="@style/AddEdit_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:gravity="center_vertical"
            android:text="@string/financial_control_status" />

        <TextView
            android:id="@+id/dialog_sale_order_financial_control_status_text"
            style="@style/AddEdit_Text_Value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/dialog_sale_order_order_status_for_shipment_layout"
            style="@style/AddEdit_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:gravity="center_vertical"
            android:text="@string/order_status_for_shipment" />

        <TextView
            android:id="@+id/dialog_sale_order_order_status_for_shipment_text"
            style="@style/AddEdit_Text_Value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/dialog_sale_order_order_value_status_label"
            style="@style/AddEdit_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:gravity="center_vertical"
            android:text="@string/order_value_status" />

        <TextView
            android:id="@+id/dialog_sale_order_order_value_status_text"
            style="@style/AddEdit_Text_Value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/dialogButtonOK"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text=" Ok " />
        </LinearLayout>
    </LinearLayout>

</ScrollView>