<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/multipane_half_padding"
        android:layout_weight="3"
        android:background="@drawable/home_frame_border"
        android:divider="@null"
        android:listSelector="@drawable/item_background_holo_light" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content_master"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/content_title"
            style="@style/HomePaneHeaderLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/multipane_half_padding"
            android:gravity="center"
             />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/multipane_half_padding"
            android:background="@drawable/home_frame_border" />
    </LinearLayout>

</LinearLayout>