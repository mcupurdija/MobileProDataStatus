            <EditText
                android:id="@+id/contact_division_input"
                android:hint="@string/contact_division_hint"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:id="@+id/contact_number_of_blue_coat_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip" >

            <TextView
                android:id="@+id/contact_number_of_blue_coat_title"
                android:text="@string/contact_number_of_blue_coat_title"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/contact_number_of_blue_coat_input"
                android:hint="@string/contact_number_of_blue_coat_hint"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>
        <TableRow
            android:id="@+id/contact_number_of_grey_coat_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip" >

            <TextView
                android:id="@+id/contact_number_of_grey_coat_title"
                android:text="@string/contact_number_of_grey_coat_title"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/contact_number_of_grey_coat_input"
                android:hint="@string/contact_number_of_grey_coat_hint"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>
         <TableRow
            android:id="@+id/contact_job_title_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip" >

            <TextView
                android:id="@+id/contact_job_title"
                android:text="@string/contact_job_title"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/contact_job_title_input"
                android:hint="@string/contact_job_title_hint"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>
    </TableLayout>

</LinearLayout>