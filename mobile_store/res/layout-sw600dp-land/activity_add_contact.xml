<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:baselineAligned="false" >

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/contact_first_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dip" >

        <!-- 2 columns -->

        <TableRow
            android:id="@+id/contact_name_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip" >

            <TextView
                android:id="@+id/contact_name_title"
                android:text="@string/contact_name_title"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/contact_name_input"
                android:hint="@string/contact_name_hint"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:id="@+id/contact_name_2_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip" >

            <TextView
                android:id="@+id/contact_name_2_title"
                android:text="@string/contact_name_2_title"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/contact_name_2_input"
                android:hint="@string/contact_name_2_hint"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <!-- edittext span 2 column -->

        <TableRow
            android:id="@+id/contact_type_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip" >

            <TextView
                android:id="@+id/contact_type_title"
                android:text="@string/contact_type_title"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/contact_type_sppiner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:id="@+id/contact_address_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip" >

            <TextView
                android:id="@+id/contact_address_title"
                android:text="@string/contact_address_title"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/contact_address_input"
                android:hint="@string/contact_address_hint"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <!-- display this button in 3rd column via layout_column(zero based) -->

        <TableRow
            android:id="@+id/contact_contact_contact_phone_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip" >

            <TextView
                android:id="@+id/contact_city_title"
                android:text="@string/contact_city_title"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/contact_city_input"
                android:hint="@string/contact_city_hint"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <!-- display this button in 2nd column via layout_column(zero based) -->

        <TableRow
            android:id="@+id/post_code_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip" >

            <TextView
                android:id="@+id/contact_post_code_title"
                android:text="@string/contact_post_code_title"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/contact_post_code_input"
                android:hint="@string/contact_post_code_hint"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:id="@+id/phone_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip" >

            <TextView
                android:id="@+id/contact_phone_title"
                android:text="@string/contact_phone_title"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/contact_phone_input"
                android:hint="@string/contact_phone_hint"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:id="@+id/contact_mobile_phone_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip" >

            <TextView
                android:id="@+id/contact_mobile_phone_title"
                android:text="@string/contact_mobile_phone_title"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/contact_mobile_phone_input"
                android:hint="@string/contact_mobile_phone_hint"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

       
    </TableLayout>

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/contact_second_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dip" >
         <TableRow
