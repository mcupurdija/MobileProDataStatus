<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|top"
    android:animateLayoutChanges="false"
    android:background="#FFE9E9E9"
    android:fillViewport="true"
    android:orientation="vertical"
    android:paddingLeft="80dp"
    android:paddingRight="80dp" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:background="#FFFFFFFF"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="28dip" >

        <TextView
            android:id="@+id/add_customer_names_label"
            style="@style/AddEdit_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left|center_vertical"
            android:text="@string/add_customer_names_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/add_customer_name1"
                style="@style/AddEdit_Text_Value"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_weight="6"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/so_line_item_max_quantity_value"
                style="@style/AddEdit_Text_Value"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_weight="4" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/add_customer_address_label"
            style="@style/AddEdit_Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left|center_vertical"
            android:text="@string/add_customer_address_title" />
        <EditText
            android:id="@+id/so_line_item_max_quantity_value"
            style="@style/AddEdit_Text_Value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip" />
        
    </LinearLayout>

</ScrollView>